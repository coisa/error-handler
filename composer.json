{
    "name": "coisa/error-handler",
    "description": "Error Handler Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "contato@felipeabreu.com.br"
        }
    ],
    "require": {
        "php": "^7.2",
        "psr/http-server-middleware": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\ErrorHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\ErrorHandler\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phly/phly-event-dispatcher": "^1.0",
        "zendframework/zend-servicemanager": "^3.4",
        "zendframework/zend-diactoros": "^2.1",
        "coisa/http": "1.0.x-dev"
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "test": "phpunit --coverage-text"
    },
    "extra": {
        "zf": {
            "config-provider": "CoiSA\\ErrorHandler\\Container\\ConfigProvider"
        }
    }
}
