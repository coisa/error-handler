{
    "name": "coisa/error-handler",
    "description": "Error Handler Library",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "github@felipeabreu.com.br"
        }
    ],
    "config": {
        "sort-packages": true,
        "prefer-stable": true,
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "v2.x-dev"
        },
        "zf": {
            "config-provider": "CoiSA\\ErrorHandler\\Container\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.2",
        "psr/http-server-middleware": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\ErrorHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\ErrorHandler\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "coisa/http": "1.0.x-dev",
        "friendsofphp/php-cs-fixer": "^2.15",
        "jangregor/phpstan-prophecy": "^0.4.2",
        "phly/phly-event-dispatcher": "^1.0",
        "phpstan/phpstan": "^0.11.16",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "phpunit/phpunit": "^8.3",
        "squizlabs/php_codesniffer": "^3.4",
        "zendframework/zend-diactoros": "^2.1",
        "zendframework/zend-servicemanager": "^3.4"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@sniff",
            "@test",
            "@analyze"
        ],
        "analyze": "phpstan analyze --level max ./src ./tests",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": [
            "php-cs-fixer fix",
            "phpcbf"
        ],
        "sniff": "phpcs",
        "test": "phpunit --colors=always"
    }
}
